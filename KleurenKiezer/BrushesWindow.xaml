<Window x:Class="KleurenKiezer.BrushesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <!--Background-property verwacht geen kleur als waarde, maar een Brush!-->
    <DockPanel >
        <StackPanel Name="panelMetKnop" Margin="5,0">
            <ToggleButton Name="buttonVergroot" Background="Orange" Height="60"
                          Width="125" Content="Vergroot" Click="buttonVergroot_Click"/>
            <TextBox Height="50" Width="125" Margin="0,5"
                     Text="Hier kan je iets tikken"/>
        </StackPanel>
        <Rectangle Name="Vergroting" Height="400" Width="500"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </DockPanel>
</Window>
